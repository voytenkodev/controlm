
<html lang="ru">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" 
    rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" 
    crossorigin="anonymous">

    <%- include('layouts/header'); -%> 
<body class="matches-img">
    <%- include('layouts/navbar'); -%>
    <!--Main Content-->
    <div class="buttons-top">
        <a href="/contacts/new" class="add-match"><span>&#8853;</span></a>
    </div>
    <div class="container-fluid text-center">
        <div class="row">
                <% for (var i = 0;i < contacts.length; i++) { %>
                    <div class="col-12 col-lg-3 col-md-4 col-sm-4 col-xl-4 mx-auto">
                    <div class="post-preview matches-block">
                        <a href="/contact/<%=contacts[i].id%>" class="match-info">
                            <h5 class="match-date">
                                <%=contacts[i].surname %>
                            </h5>
                            <h5 class="match-league">
                                <%=contacts[i].name %>
                            </h5>
                            <a href="callto:<%=contacts[i].number %>"
                            class="match-city">
                                <%=contacts[i].number %>
                            </h5>
                        </a>
                    </div>
                    <hr>
                </div>
                <% } %>
            </div>
        </div>
    </div>
    <%- include('layouts/scripts'); -%>
</body>
</html>