    <%- include('layouts/header'); -%> 
<body class="matches-img">
    <%- include('layouts/navbar'); -%>
    <!--Main Content-->
    <div class="buttons-top">
        <a href="/match/new" class="add-match"><span>&#8853;</span></a>
    </div>
    
    <div class="container">
        <div class="row matches">
                <% for (var i = 0;i < matchposts.length; i++) { %>
                    <% if (currentdate < matchposts[i].date) { %>
                        <div class="post-preview matches-block col-10 col-md-5 col-xl-3">
                            <a href="/match/<%=matchposts[i].id%>" class="match-info col-4">
                                <div class="fst-part">
                                    <h5 class="match-date text"><img class="icon" src="../img/calendar.png"/>
                                        <%=matchposts[i].date %>
                                    </h5>
                                    <h5 class="match-time text">
                                        <img class="icon" src="../img/clock.png"/>
                                        <%=matchposts[i].time %>
                                    </h5>
                                </div>
                                <div class="tst-part">
                                    <p class="team"><%=matchposts[i].team_1%></p>
                                    <p class="vs">vs</p>
                                    <p class="team team2"><%=matchposts[i].team_2%></p>
                                </div>
                                <h5 class="match-league">
                                    <%=matchposts[i].league %>
                                </h5>
                                <div class="last-part">
                                    <p class="location"><img class="icon" src="../img/pin.png"/>
                                        <%=matchposts[i].city%></p>
                                    <p class="location"><img class="icon" src="../img/stadium.png"/>
                                        <%=matchposts[i].stadium%></p>
                                </div>
                            </a>
                        </div>
            <% } %>
                <% } %>
        </div>
